{
  "name": "file-download-network",
  "main": "build/server",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:remix && npm run build:server",
    "build:remix": "remix build && cp ./src/public/* ./build/public",
    "build:server": "tsc -p ./src/server/tsconfig.json",
    "dev": "remix dev -c \"npm start\"",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "start": "node ."
  },
  "dependencies": {
    "@remix-run/css-bundle": "2.12.1",
    "@remix-run/express": "2.12.1",
    "@remix-run/node": "2.12.1",
    "@remix-run/react": "2.12.1",
    "compression": "1.7.4",
    "dotenv": "16.4.5",
    "express": "4.21.1",
    "express-rate-limit": "7.4.1",
    "helmet": "8.0.0",
    "isbot": "5.1.17",
    "morgan": "1.10.0",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@remix-run/dev": "2.12.1",
    "@total-typescript/ts-reset": "0.6.1",
    "@tsconfig/node18": "18.2.4",
    "@tsconfig/remix": "2.0.5",
    "@tsconfig/strictest": "2.0.5",
    "@types/express": "4.17.21",
    "@types/morgan": "1.9.9",
    "@types/node": "18.19.59",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.1",
    "autoprefixer": "10.4.20",
    "eslint": "8.57.1",
    "eslint-config-promise": "github:promise/eslint-config",
    "tailwindcss": "3.4.14",
    "typescript": "5.6.3"
  },
  "eslintConfig": {
    "extends": "promise",
    "rules": {
      "no-console": "off",
      "react/react-in-jsx-scope": "off"
    }
  }
}
